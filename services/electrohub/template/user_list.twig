{% extends 'base.twig' %}

{% block title %}User List{% endblock %}
{% block extend_css %}

{% endblock %}

{% block content %}
    <div class="container">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Giro</th>
            </tr>
            </thead>
            <tbody>
            {% for user in user_list %}
                <tr>
                    <th scope="row">
                        <a href="/user/{{ user.id }}/">{{ user.id }}</a>
                    </th>
                    <th>{{ user.first_name }}</th>
                    <th>{{ user.last_name }}</th>
                    <th>{{ user.print_giro }}</th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
