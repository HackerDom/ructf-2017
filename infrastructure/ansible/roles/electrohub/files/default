server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /var/www;

	index index.php;

	location / {
        fastcgi_pass unix:/run/php/php7.0-fpm.sock;
		fastcgi_param SCRIPT_FILENAME $document_root/index.php;
        include fastcgi_params;
    }

    location /static/ {
        root /var/www/static/;
    }
}